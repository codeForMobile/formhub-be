{
  "name": "node-backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "engines": {
    "node": ">= 18.18.0"
  },
  "dependencies": {
    "@faker-js/faker": "^8.2.0",
    "@prisma/client": "5.4.1",
    "apollo-server-core": "^3.12.1",
    "apollo-server-express": "^3.12.1",
    "bullmq": "^4.12.7",
    "express": "^4.18.2",
    "graphql": "^16.8.1",
    "graphql-iso-date": "^3.6.1",
    "graphql-type-json": "^0.3.2",
    "knex": "^3.0.1",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "typescript": "^4.5.4",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.92",
    "@tsconfig/node16": "^16.1.1",
    "@types/express": "^4.17.18",
    "@types/graphql-iso-date": "^3.4.0",
    "@types/lodash": "^4.14.200",
    "@types/morgan": "^1.9.6",
    "@types/node": "^20.8.2",
    "@types/uuid": "^9.0.5",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint": "^8.50.0",
    "prisma": "^5.4.1",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.1"
  },
  "scripts": {
    "build": "rimraf dist && swc ./src -d dist",
    "start": "node dist/index.js",
    "start:docker": "yarn build && node --inspect=0.0.0.0 dist/index.js",
    "db:console": "docker compose exec postgres psql -h localhost -U postgres -d webapp_dev",
    "rebuild:be": "docker compose build backend && docker compose rm --stop backend && docker compose up -d backend",
    "db:migrate": "knex migrate:latest",
    "docker:db:migrate": "docker compose run backend yarn db:migrate",
    "build:prisma": "prisma generate && yarn rebuild:be"
  }
}
